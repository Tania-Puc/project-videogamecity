
{{>navigation}}
<div class="container p-4">
    {{>mensajes}}

    <div class="row">

        <div class="col-md-5 mx-auto">
            <div class="card " style="border-radius: 12px ">
                <div class="card-header" style="text-align: center;">
                    <h5>Editar</h5>
                </div>
                <div class="card-body">

                    <form action="/juegos/edit/{{videojuegos.idjuego}}" method="POST">

                        <input type="number" style="visibility: hidden;" name="idusuario" placeholder="idusuario"
                            value="{{videojuegos.idusuario}}">
                        <input type="number" style="visibility: hidden;" name="idestatus" placeholder="idusuario"
                            value="{{videojuegos.idestatus}}">

                        <div class="form-grup">
                            <input type="text" value="{{videojuegos.titulo}}" class="form-control" name="titulo"
                                placeholder="Titulo" autofocus>
                        </div>
                        <br>
                        <div class="form-grup">
                            <textarea name="descripcion" rows="2" class="form-control"
                                placeholder="DescripciÃ³n">{{videojuegos.descripcion}}</textarea>
                        </div>
                        <br>
                        <div class="form-grup">
                            <input type="url" value="{{videojuegos.imagen}}" name="imagen" class="form-control "
                                placeholder="url de imagen">

                        </div>

                        <br>
                        <div class="form-grup">
                            <button class="btn btn-outline-secondary btn-rounded"
                                style=" color:white; background-color: #0D255E; border-radius: 12px ">
                                <i class="fas fa-save"></i> Guardar</button>
                        </div>
                        <br>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>